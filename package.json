{
  "name": "medical-ocr-microservice",
  "version": "3.0.0",
  "description": "Microservicio de visación automática de órdenes médicas con GPT-4o Vision, Auto-Training y RAG",
  "main": "server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "lint": "eslint src/ --fix",
    "cleanup": "node src/utils/cleanup-cron.js",
    "docker:build": "docker build -t medical-ocr-service .",
    "docker:run": "docker-compose up -d",
    "db:migrate": "psql -U postgres -d medical_ocr -f database/schema.sql",
    "db:seed": "node scripts/seed-database.js"
  },
  "keywords": [
    "medical",
    "ocr",
    "gpt-4o",
    "vision",
    "healthcare",
    "document-processing",
    "fine-tuning",
    "rag",
    "vector-search",
    "auto-training"
  ],
  "author": "Medical OCR Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.52.0",
    "pdf-parse": "^2.4.5",
    "pg": "^8.11.3",
    "pgvector": "^0.1.8",
    "sharp": "^0.33.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  }
}
