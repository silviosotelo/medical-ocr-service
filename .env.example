# ================================
# CONFIGURACION DEL SERVIDOR
# ================================
NODE_ENV=development
PORT=3000

# ================================
# OPENAI API
# ================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_TIMEOUT_MS=60000

# Modelo fine-tuned (opcional - se actualiza por auto-training)
# FINE_TUNED_MODEL=ft:gpt-4o-2024-08-06:your-org:medical-orders-v1:abc123

# ================================
# POSTGRESQL DATABASE
# ================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=medical_ocr
POSTGRES_USER=medical_ocr
POSTGRES_PASSWORD=medical_ocr_dev

# ================================
# PRE-VISACION
# ================================
# ID de prestador por defecto (0 = sin prestador, solo nomenclador)
DEFAULT_PRESTADOR_ID=0

# ================================
# ORACLE APEX (integracion)
# ================================
# APEX_BASE_URL=https://apex.example.com/ords/workspace
# APEX_APP_ID=100

# ================================
# AUTO-TRAINING SYSTEM
# ================================
AUTO_TRAINING_ENABLED=true
MIN_TRAINING_EXAMPLES=50
TRAINING_DIR=./training-data

# ================================
# FINE-TUNING HYPERPARAMETERS
# ================================
FINETUNE_EPOCHS=3
FINETUNE_BATCH_SIZE=1
FINETUNE_LEARNING_RATE=0.1

# ================================
# BATCH PROCESSING
# ================================
BATCH_MAX_FILES=20
BATCH_MAX_CONCURRENCY=5

# ================================
# ARCHIVOS Y ALMACENAMIENTO
# ================================
TEMP_DIR=./temp
LOG_DIR=./logs
MAX_FILE_SIZE_MB=10

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# ================================
# REDIS (opcional - funciona sin Redis)
# ================================
# REDIS_URL=redis://localhost:6379

# ================================
# AUTHENTICATION
# ================================
JWT_SECRET=change-me-in-production-use-long-random-string
JWT_EXPIRES=8h
JWT_REFRESH_EXPIRES=7d

# ================================
# QUEUE (opcional)
# ================================
QUEUE_CONCURRENCY=3

# ================================
# CORS (separados por comas)
# ================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
