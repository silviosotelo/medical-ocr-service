# ================================
# SERVER
# ================================
NODE_ENV=development
PORT=3000

# ================================
# OPENAI API (obligatorio)
# ================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_TIMEOUT_MS=60000

# Modelo fine-tuned (opcional - se actualiza por auto-training)
# FINE_TUNED_MODEL=ft:gpt-4o-2024-08-06:your-org:medical-orders-v1:abc123

# ================================
# POSTGRESQL (obligatorio)
# ================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=medical_ocr
POSTGRES_USER=medical_ocr
POSTGRES_PASSWORD=medical_ocr_dev
DATABASE_URL=postgresql://medical_ocr:medical_ocr_dev@localhost:5432/medical_ocr

# ================================
# AUTHENTICATION (obligatorio en produccion)
# ================================
JWT_SECRET=change-me-in-production-use-long-random-string
JWT_REFRESH_SECRET=change-me-too-different-from-jwt-secret
JWT_EXPIRES=8h
JWT_REFRESH_EXPIRES=7d

# ================================
# PRE-VISACION
# ================================
DEFAULT_PRESTADOR_ID=0

# ================================
# JOB QUEUE / WORKERS
# ================================
WORKER_CONCURRENCY=3

# ================================
# AUTO-TRAINING
# ================================
AUTO_TRAINING_ENABLED=true
MIN_TRAINING_EXAMPLES=50
TRAINING_DIR=./training-data

# ================================
# FINE-TUNING HYPERPARAMETERS
# ================================
FINETUNE_EPOCHS=3
FINETUNE_BATCH_SIZE=1
FINETUNE_LEARNING_RATE=0.1

# ================================
# FILES & STORAGE
# ================================
TEMP_DIR=./temp
LOG_DIR=./logs
MAX_FILE_SIZE_MB=10

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# ================================
# REDIS (opcional - el servicio funciona sin Redis)
# ================================
# REDIS_URL=redis://localhost:6379

# ================================
# CORS
# ================================
ALLOWED_ORIGINS=*

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
