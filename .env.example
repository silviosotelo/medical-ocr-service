# ================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================
NODE_ENV=development
PORT=3000

# ================================
# OPENAI API
# ================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_TIMEOUT_MS=60000

# Modelo fine-tuned (opcional - se actualiza automáticamente por auto-training)
# FINE_TUNED_MODEL=ft:gpt-4o-2024-08-06:your-org:medical-orders-v1:abc123

# ================================
# POSTGRESQL DATABASE
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medical_ocr
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_POOL_MAX=20

# ================================
# AUTO-TRAINING SYSTEM
# ================================
# Habilitar entrenamiento automático
AUTO_TRAINING_ENABLED=true

# Mínimo de ejemplos validados para iniciar training
MIN_TRAINING_EXAMPLES=50

# Directorio para almacenar datasets de training
TRAINING_DIR=./training-data

# ================================
# FINE-TUNING HYPERPARAMETERS
# ================================
FINETUNE_EPOCHS=3
FINETUNE_BATCH_SIZE=1
FINETUNE_LEARNING_RATE=0.1

# ================================
# BATCH PROCESSING
# ================================
# Máximo de archivos por batch
BATCH_MAX_FILES=20

# Archivos procesados en paralelo simultáneamente
BATCH_MAX_CONCURRENCY=5

# ================================
# ARCHIVOS Y ALMACENAMIENTO
# ================================
TEMP_DIR=./temp
LOG_DIR=./logs
MAX_FILE_SIZE_MB=10

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# ================================
# CORS (separados por comas)
# ================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ================================
# LOGGING
# ================================
LOG_LEVEL=info

# ================================
# REDIS (opcional - para caché)
# ================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# CACHE_TTL_SECONDS=3600
