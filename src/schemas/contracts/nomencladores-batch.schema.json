{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nomencladores Batch Request",
  "description": "Schema for batch upsert of nomencladores (medical procedure codes)",
  "type": "object",
  "required": ["nomencladores"],
  "properties": {
    "source_ref": {
      "type": ["string", "null"],
      "description": "Reference identifier from the source system"
    },
    "nomencladores": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5000,
      "items": {
        "type": "object",
        "required": ["id_externo", "descripcion"],
        "properties": {
          "id_externo": {
            "type": "string",
            "description": "External system identifier (Oracle, APEX, etc.)"
          },
          "id_servicio": {
            "type": ["integer", "null"],
            "description": "Service ID"
          },
          "especialidad": {
            "type": ["string", "null"],
            "description": "Medical specialty"
          },
          "descripcion": {
            "type": "string",
            "description": "Procedure description"
          },
          "desc_nomenclador": {
            "type": ["string", "null"],
            "description": "Extended nomenclador description"
          },
          "grupo": {
            "type": ["string", "null"],
            "description": "Procedure group code"
          },
          "subgrupo": {
            "type": ["string", "null"],
            "description": "Procedure subgroup code"
          },
          "sinonimos": {
            "type": "array",
            "items": { "type": "string" },
            "default": [],
            "description": "Synonym terms for semantic matching"
          },
          "palabras_clave": {
            "type": "array",
            "items": { "type": "string" },
            "default": [],
            "description": "Keywords for matching"
          },
          "estado": {
            "type": "string",
            "default": "ACTIVO",
            "enum": ["ACTIVO", "INACTIVO"]
          }
        }
      }
    }
  }
}
